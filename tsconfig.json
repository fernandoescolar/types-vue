{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015",
      "dom",
      "scripthost"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictFunctionTypes": false,
    "declaration": true,
    "outDir": "./lib"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}